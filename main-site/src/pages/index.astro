---
import BaseLayout from "../layouts/BaseLayout.astro";
import AlbumPromoScreen from "../components/AlbumPromoScreen.svelte";

const title = "Home";
---

<BaseLayout title={title}>
  <section class="hero">
    <div class="hero-image-wrapper">
      <img class="hero-image" src="reimu_terbang.webp" alt="Hero" />
      <div class="hero-caption">Welcome to Ragapuspa</div>
    </div>

    <div class="hero-title" style="font-size: 2rem;">
      <h1>Ragapuspa</h1>
    </div>
    <div class="hero-slogan">
      <h2>Like-minded creative people create together.</h2>
    </div>
    <div class="hero-description">
      <p>
        We are a creative group from Indonesia that consists of skilled artists
        from multiple disciplines such as music, art, animation, and
        web design.
      </p>
    </div>
  </section>
  <a href="/album1">Album 1 Page</a>

  <div style="height: 500px;"></div>
  <AlbumPromoScreen client:load />
</BaseLayout>

<style>
  .hero {
    width: 100%;
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-image-wrapper {
    position: relative;
    width: 100vw;
    height: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .hero-image {
    width: 100%;
    height: auto;
    max-height: 95vh;
    display: block;
    object-fit: cover;
    object-position: center;
  }

  .hero-caption {
    position: absolute;
    bottom: 20px;
    right: 20px;
    color: white;
    padding: 0.5rem 1rem;
    font-size: 2rem;
    border-radius: 8px;
    z-index: 10;
    font-family: "Zen Maru Gothic", sans-serif;
    font-weight: 700;
    font-style: normal;
  }

  /* Texts below the hero image */
  .hero-title,
  .hero-slogan,
  .hero-description {
    text-align: left;
    width: 100%;
    max-width: 960px;
    margin: 1rem auto;
    padding: 0 1rem;
  }
</style>
