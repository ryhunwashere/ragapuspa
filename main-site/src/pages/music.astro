---
import MusicLayout from "../layouts/MusicLayout.astro";

import Wheel from "../components/music/Wheel.svelte";
import BackgroudImage from "../components/music/BackgroundImage.svelte";
import PlaybackButton from "../components/music/PlaybackButton.svelte";
import AudioPlayer from "../components/music/AudioPlayer.svelte";
import MusicDescription from "../components/music/MusicDescription.svelte";

import cards from "../data/cards.json";
---

<MusicLayout>
  <section class="music-selector">
    <BackgroudImage client:idle />
    <div class="left-container">
      <MusicDescription client:idle />
    </div>

    <div class="playback-container">
      <PlaybackButton client:visible />
    </div>

    <div class="right-container">
      <Wheel client:idle cards={cards} />
      <AudioPlayer client:idle />
    </div>
  </section>
</MusicLayout>

<style>
  .music-selector {
    position: relative;
    display: flex;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    background-color: rgb(54, 54, 54);
  }

  .left-container {
    color: white;
    position: relative;
    width: 50%;
    padding-left: 3%;
    padding-top: 0.5%;
    background: black;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.6) 60%,
      rgba(255, 255, 255, 0) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    overflow: hidden;
  }

  .playback-container {
    z-index: 1;
    width: 30vw;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .right-container {
    position: relative;
    width: 40vw;
    right: 0px;
    overflow-y: scroll;
    padding-left: 1rem;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .right-container::-webkit-scrollbar {
    display: none;
  }

  .release-title {
    padding-top: 5%;
    letter-spacing: -4px;
    font-size: clamp(4rem, 1.25vw, 8rem);
  }

  .description {
    padding-top: 10%;
    padding-right: 20%;
    font-size: clamp(1rem, 1.25vw, 3rem);
  }

  .credits {
    list-style: none;
    padding-top: 50px;
    margin-bottom: auto;
  }
</style>
