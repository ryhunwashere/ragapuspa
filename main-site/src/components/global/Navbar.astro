---
const navItems = ["About", "Music", "Album1", "Gallery"];
---

<div class="hamburger-container">
  <button id="menuBtn" class="hamburger-menu" aria-label="Menu"> â˜° </button>
</div>

<nav id="siteNavbar" class="site-navbar">
  <div id="menuList" class="menu-list">
    <div class="home-link">
      <div>
        <a href="/">Ragapuspa</a>
      </div>
    </div>

    <div class="nav-items">
      {
        navItems.map((item) => (
          <div class="link">
            <a href={"/" + item.toLowerCase()}>{item}</a>
          </div>
        ))
      }
    </div>
  </div>
</nav>

<script is:inline>
  function initNavbarScript() {
    let isVisible = false;

    const siteNavbar = document.getElementById("siteNavbar");
    const menuBtn = document.getElementById("menuBtn");
    const menuLinks = document.querySelectorAll("#menuList a");

    if (!siteNavbar || !menuBtn) return;

    const hideNavbar = () => {
      if (isVisible) {
        siteNavbar.style.transform = "translateX(-150%)";
        isVisible = false;
      }
    };

    const toggleMenu = () => {
      siteNavbar.style.transform = isVisible
        ? "translateX(-150%)"
        : "translateX(0%)";
      isVisible = !isVisible;
    };

    menuBtn.removeEventListener("click", toggleMenu);
    menuBtn.addEventListener("click", toggleMenu);

    menuLinks.forEach((link) => {
      link.removeEventListener("click", hideNavbar);
      link.addEventListener("click", hideNavbar);
    });

    hideNavbar();
  }

  initNavbarScript();

  document.addEventListener("astro:after-swap", initNavbarScript);
</script>

<style>
  .hamburger-container {
    z-index: 200;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    width: 50px;
    height: 50px;
    border-radius: 8px;
    background-color: #00000080;
    transition: background-color 0.5s ease;
    transform: translateX(25%) translateY(25%);
  }

  .site-navbar {
    z-index: 100;
    position: fixed;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(12px) invert(100%);
    transform: translateX(-100%);
    transition: transform 0.5s ease;
  }

  .menu-list {
    height: 100vh;
    width: 15vw;
    display: flex;
    flex-direction: column;
  }

  .menu-list a {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: white;
    font-family: "Zen Maru Gothic", sans-serif;
    font-weight: 700;
    text-align: center;
    font-size: x-large;
  }

  .home-link {
    position: relative;
    width: 100%;
    height: 10%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-left: 25%;
  }

  .nav-items {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1px;
    padding-top: 5%;
    padding-bottom: 5%;
  }

  .link {
    width: 100%;
    height: 3rem;
    transition: backdrop-filter 0.2s ease;
  }

  .link a {
    transition: color 0.2s ease;
  }

  .link:hover {
    backdrop-filter: invert(100%);
  }

  .link:hover a {
    color: black;
  }

  .hamburger-menu {
    width: 100%;
    height: 100%;
    font-size: clamp(0.5rem, 1.5rem, 5rem);
    color: white;
    background: none;
    border: none;
    cursor: pointer;
  }

  .hamburger-container:hover {
    background-color: rgba(0, 0, 0, 0.8);
    filter: invert(100%);
  }
</style>
