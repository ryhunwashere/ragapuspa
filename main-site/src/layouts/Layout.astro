---
const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Music Group</title>

    <!-- Load GSAP first -->
    <script
      is:raw
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.13.0/gsap.min.js"
    ></script>

    <!-- Then load your animation logic -->
    <script is:raw src="/scripts/navbarAnimations.js"></script>
  </head>

  <body>
    <header class="site-header">
      <nav class="navbar">
        <!-- Left aligned section -->
        <div class="nav-left">
          <a href="/">Music Group</a>
        </div>

        <!-- Hamburger icon (visible only on small screens) -->
        <button class="hamburger-menu" aria-label="Menu"> â˜° </button>

        <!-- Right aligned section -->
        <div class="nav-right" id="navLinks">
          <a href="/about">About</a>
          <span class="separator">.</span>
          <a href="/music">Music</a>
          <span class="separator">.</span>
          <a href="/contact-us">Contact Us</a>
        </div>
      </nav>
    </header>

    <!-- Main content -->
    <main class="main">
      <slot />
    </main>
  </body>
</html>
